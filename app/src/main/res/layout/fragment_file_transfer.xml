<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.file.FileTransferHelper">

    <!-- Status TextView -->

    <!-- Button to select a file -->
    <Button
        android:id="@+id/buttonSelectFile"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Select File"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:layout_marginTop="90dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_register"
        android:layout_marginBottom="16dp"/>

    <!-- Button to send a file -->
    <Button
        android:id="@+id/buttonSendFile"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Send File"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:layout_gravity="center"
        android:background="@drawable/btn_register"
        android:layout_marginBottom="16dp"/>

    <!-- Button to reload server -->
    <Button
        android:id="@+id/buttonReloadServer"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Reload Server"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:layout_gravity="center"
        android:background="@drawable/btn_register"/>

    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:padding="8dp"
        android:layout_marginBottom="24dp"/>

</LinearLayout>
